@model TipoCuenta
@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<h1>Editar Tipo Cuenta @Model.Nombre</h1>
<form asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label> @*Con el tag asp-for sincronizamos el tag con el que este en el modelo*@
        <input type="text" asp-for="Nombre" class="form-control" /> @*Tambien aqui modificamos id="Nombre" name="Nombre" por asp-for="Nombre" para que no se pierda*@
        <span asp-validation-for="Nombre" class="text-danger"></span> @*Esta etiqueta es para colocar los errores a cada una de las etiquetas*@
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}